{
	"name": "intentpress/intentpress",
	"version": "0.2.3",
	"description": "AI-powered semantic search plugin for WordPress",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "IntentPress",
			"email": "support@intentpress.com"
		}
	],
	"require": {
		"php": ">=8.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.6",
		"wp-coding-standards/wpcs": "^3.0",
		"phpstan/phpstan": "^1.10",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"yoast/phpunit-polyfills": "^2.0"
	},
	"autoload": {
		"classmap": [
			"includes/"
		]
	},
	"scripts": {
		"phpcs": "phpcs",
		"phpcbf": "phpcbf",
		"phpstan": "phpstan analyse",
		"test": "phpunit",
		"test:coverage": "phpunit --coverage-html coverage"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"platform": {
			"php": "8.0"
		}
	}
}
